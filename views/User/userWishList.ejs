<body>
    <!-- Wishlist Hero Section -->
    <div class="wishlist-hero-section container-fluid">
        <div class="container">
            <h1>My Wishlist</h1>
            <p class="lead">Keep track of books you love and want to read next.</p>
        </div>
    </div>

    <!-- Wishlist Content -->
    <div class="container mt-5 mb-5">
        <div class="wishlist-container">
            <div id="wishlist-content">
                <% if (wishlist?.books && wishlist.books.length > 0) { %>
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="d-flex justify-content-between align-items-center">
                                <h3 class="section-title">Your Saved Books</h3>
                                <button class="btn clear-wishlist-btn">Clear Wishlist</button>
                            </div>
                            <hr>
                        </div>
                    </div>
                    
                    <div class="row">
                        <% wishlist.books.forEach(item => { %>
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="wishlist-book-card">
                                    <div class="card-actions">
                                        <button class="remove-item-btn" data-id="<%= item.product._id %>">
                                            <i class="fas fa-times"></i>
                                        </button>
                                    </div>
                                    <div class="wishlist-book-content">
                                        <div class="wishlist-img-container">
                                            <img src="<%= item.product.productImages[0] %>" alt="<%= item.product.name %>" class="wishlist-book-img">
                                        </div>
                                        <div class="wishlist-book-details">
                                            <h5 class="card-title"><%= item.product.name %></h5>
                                            <p class="book-author"><%= item.product.writer %></p>
                                            <p class="book-price">
                                                <% if (item.product.offerPrice) { %>
                                                    <span class="original-price">₹<%= item.product.salePrice %></span>
                                                    <span class="offer-price">₹<%= item.product.offerPrice %></span>
                                                    <% if (item.product.offerPercentage) { %>
                                                        <span class="offer-badge"><%= item.product.offerPercentage %>% OFF</span>
                                                    <% } %>
                                                <% } else { %>
                                                    ₹<%= item.product.salePrice %>
                                                <% } %>
                                            </p>
                                            <div class="action-buttons">
                                                <button class="btn add-to-cart-btn <%= item.isInCart ? 'disabled' : '' %>" data-id="<%= item.product._id %>">
                                                    <i class="fas fa-shopping-cart"></i> <%= item.isInCart ? 'In Cart' : 'Add to Cart' %>
                                                </button>
                                                <a href="/bookPage/<%= item.product._id %>" class="btn view-details-btn">
                                                    <i class="fas fa-eye"></i> View
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                <% } else { %>
                    <div class="empty-wishlist">
                        <div class="text-center">
                            <i class="far fa-heart empty-wishlist-icon"></i>
                            <h3>No items in wishlist</h3>
                            <p>Your wishlist is currently empty. Explore our collection to discover books you'll love.</p>
                            <a href="/" class="btn browse-books-btn mt-3">
                                <i class="fas fa-book-open me-2"></i> Browse More
                            </a>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Recommendations Section -->
    <div class="container mt-5 mb-5">
        <div class="recommendations-section">
            <h2 class="section-title">You Might Also Like</h2>
            <div class="row" id="recommended-books">
                <% if (typeof recommendedBooks !== 'undefined' && recommendedBooks.length > 0) { %>
                    <% recommendedBooks.forEach(book => { %>
                        <div class="col-md-3 mb-4">
                            <div class="book-card">
                                <img src="<%= book.productImages[0] %>" alt="<%= book.name %>" class="img-fluid">
                                <div class="book-info">
                                    <h5><%= book.name %></h5>
                                    <p class="book-author"><%= book.writer %></p>
                                    <p class="fw-bold book-price">
                                        <% if (book.offerPrice) { %>
                                            <span class="original-price">₹<%= book.salePrice %></span>
                                            <span class="offer-price">₹<%= book.offerPrice %></span>
                                            <% if (book.offerPercentage) { %>
                                                <span class="offer-badge"><%= book.offerPercentage %>% OFF</span>
                                            <% } %>
                                        <% } else { %>
                                            ₹<%= book.salePrice %>
                                        <% } %>
                                    </p>
                                </div>
                                <div class="book-buttons">
                                    <button class="btn add-to-cart-btn <%= book.isInCart ? 'disabled' : '' %>" data-id="<%= book._id %>">
                                        <i class="fas fa-shopping-cart"></i> <%= book.isInCart ? 'In Cart' : 'Add' %>
                                    </button>
                                    <a href="/bookPage/<%= book._id %>" class="btn view-details-btn">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p>No recommendations available at the moment.</p>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <!-- Navigation Buttons -->
    <div class="nav-buttons">
        <a href="/" class="nav-button">
            <i class="fas fa-home"></i>
            <span>Home</span>
        </a>
        <a href="/cart" class="nav-button">
            <i class="fas fa-shopping-cart"></i>
            <span>Cart</span>
        </a>
        <a href="/account" class="nav-button">
            <i class="fas fa-user"></i>
            <span>Account</span>
        </a>
    </div>

    <!-- Add some padding to account for fixed nav buttons -->
    <div style="height: 80px;"></div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Event delegation for dynamically added elements
            document.addEventListener('click', function(event) {
                if (event.target.classList.contains('remove-item-btn') || 
                    event.target.closest('.remove-item-btn')) {
                    const button = event.target.classList.contains('remove-item-btn') ? 
                                event.target : event.target.closest('.remove-item-btn');
                    const itemId = button.getAttribute('data-id');
                    removeFromWishlist(itemId);
                }
    
                if (event.target.classList.contains('add-to-cart-btn') || 
                    event.target.closest('.add-to-cart-btn')) {
                    const button = event.target.classList.contains('add-to-cart-btn') ? 
                                event.target : event.target.closest('.add-to-cart-btn');
                    const itemId = button.getAttribute('data-id');
                    addToCart(itemId);
                }
    
                if (event.target.classList.contains('clear-wishlist-btn')) {
                    Swal.fire({
                        title: 'Are you sure?',
                        text: "This will remove all books from your wishlist.",
                        icon: 'warning',
                        showCancelButton: true,
                        confirmButtonText: 'Yes, clear it!',
                        cancelButtonText: 'Cancel',
                        reverseButtons: true
                    }).then((result) => {
                        if (result.isConfirmed) {
                            clearWishlist();
                        }
                    });
                }
            });
        });
    
        // Function to remove item from wishlist
        function removeFromWishlist(itemId) {
            fetch(`/wishlist/remove/${itemId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Removed!',
                        text: 'Book has been removed from your wishlist.',
                        icon: 'success',
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to remove book from wishlist.',
                        icon: 'error'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Something went wrong. Please try again.',
                    icon: 'error'
                });
            });
        }
    
        // Function to clear wishlist
        function clearWishlist() {
            fetch('/wishlist/clear', {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Cleared!',
                        text: 'Your wishlist has been cleared.',
                        icon: 'success',
                        timer: 2000,
                        showConfirmButton: false
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to clear wishlist.',
                        icon: 'error'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Something went wrong. Please try again.',
                    icon: 'error'
                });
            });
        }
    
        // Function to add item to cart
        function addToCart(itemId) {
            fetch('/cart/add/', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ bookId: itemId }) 
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    Swal.fire({
                        title: 'Added to Cart!',
                        text: 'Book has been added to your cart.',
                        icon: 'success',
                        timer: 2000,
                        showConfirmButton: false,
                        didClose: () => {
                        window.location.reload();
                    }
                    });
                } else {
                    Swal.fire({
                        title: 'Error!',
                        text: 'Failed to add book to cart.',
                        icon: 'error'
                    });
                }
            })
            .catch(error => {
                console.error('Error:', error);
                Swal.fire({
                    title: 'Error!',
                    text: 'Something went wrong. Please try again.',
                    icon: 'error'
                });
            });
        }
    </script>
</body>
</html>