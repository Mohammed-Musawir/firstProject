        }

        .wishlist-book-card:hover .wishlist-book-img {
            transform: scale(1.05);
        }

        .wishlist-book-details {
            flex: 1;
            display: flex;
            flex-direction: column;
            padding: 15px;
            overflow: hidden;
        }

        .card-actions {
            position: absolute;
            top: 10px;
            right: 10px;
            z-index: 10;
        }

        .remove-item-btn {
            background-color: white;
            border: none;
            border-radius: 50%;
